<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
         version="2.5">
  <welcome-file-list>
    <welcome-file>HomePage.jsp</welcome-file>
  </welcome-file-list>
   <servlet>
    <servlet-name>HelloAppEngine</servlet-name>
    <servlet-class>com.OnlineShoppingPortal.DelightCollections.HelloAppEngine</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloAppEngine</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet>   
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>com.Validation.RegistrationServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>SendSMS</servlet-name>
    <servlet-class>com.SendOtp.SmsSend</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>OtpSmsValidation</servlet-name>
    <servlet-class>com.SendOtp.OtpSmsValidation</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>OtpEmailValidation</servlet-name>
    <servlet-class>com.SendOtp.OtpEmailValidation</servlet-class>
  </servlet>
      <servlet>
    <servlet-name>CustomerValidation</servlet-name>
    <servlet-class>com.Validation.CustomerValidation</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>SendEmail</servlet-name>
    <servlet-class>com.SendOtp.SendEmail</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogInValidation</servlet-name>
    <servlet-class>com.Validation.LogInValidation</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>UploadImageServlet</servlet-name>
    <servlet-class>com.Images.UploadImageServlet</servlet-class>
  </servlet>
  
  
  
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/registrationservlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SendSMS</servlet-name>
    <url-pattern>/smssend</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>OtpSmsValidation</servlet-name>
    <url-pattern>/otpsmsvalidation</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OtpEmailValidation</servlet-name>
    <url-pattern>/otpemailvalidation</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CustomerValidation</servlet-name>
    <url-pattern>/customervalidation</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>SendEmail</servlet-name>
    <url-pattern>/sendemail</url-pattern>
  </servlet-mapping>
     <servlet-mapping>
    <servlet-name>LogInValidation</servlet-name>
    <url-pattern>/logInvalidation</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>UploadImageServlet</servlet-name>
    <url-pattern>/uploadimageservlet</url-pattern>
  </servlet-mapping>
</web-app>